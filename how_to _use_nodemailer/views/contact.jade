extends layout

block content
	.container
		form(method='post', action='contact/send')
			h1 contact
			.form-group
				label myName
				input.form-control(type='text',name='myname', placeholder='your name')
			.form-group
				label email
				input.form-control(type='text',name='email', placeholder='enter email here')
			.form-group
				label Message
				textarea.form-control(name='message' placeholder='Enter message here')
			button.btn.btn-default(type='submit') Submit	